#include <iostream>
#include <stdlib.h>
#include <string>
using namespace std;
int main()
{
	int i, j;
	const int size = 12;
	char Ar[] = "Hello people";
	char temp;
	for (int i = 0; i < sizeof(Ar); i++)
	{
		cout << i << "  " << Ar[i] << endl;
	}
	for (i = 0; j < sizeof(Ar) - 2, i <= j; i++, j--)
	{
		temp = Ar[i];
		Ar[i] = Ar[j];
		Ar[j] = temp;
	}
	cout << Ar;
	
	return 0;
}
